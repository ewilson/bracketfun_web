<div class="container">
    <h1>Tournaments</h1>
    {{#link-to 'tournaments.new' type="button" class="btn btn-primary"}}Add a tournament{{/link-to}}
    <div>&nbsp;</div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading"></div>
                <div class="panel-body list-group">
                    {{#each tournament in model}}
                        {{#link-to 'tournaments.play' tournament class="list-group-item"}}
                            <span><strong>{{tournament.title}}</strong> <em>{{tournament.eventDate}}</em></span>
                            <span {{action 'remove' tournament}} class="glyphicon glyphicon-trash pull-right"></span>
                        {{/link-to}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
