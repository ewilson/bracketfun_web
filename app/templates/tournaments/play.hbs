<div class="container page-header">
    <h1>{{model.title}}</h1>
    <nav>
        <ul class="nav nav-tabs">
          {{#link-to "tournaments.play.matches" tagName="li" href="false"}}
            {{link-to 'Matches' 'tournaments.play.matches' role='presentation'}}
          {{/link-to}}
          {{#link-to "tournaments.play.standings" tagName="li" href="false"}}
            {{link-to 'Standings' 'tournaments.play.standings' role='presentation'}}
          {{/link-to}}
          <a href=""><span {{action 'openModal' 'tournaments/play/settings'}} class="glyphicon glyphicon-cog pull-right"></span></a>
        </ul>
    </nav>
  {{outlet 'settings'}}
  {{#if model.hasPools}}
    <div class="row">
      <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
        <form class="form">
          <div class="form-group">
            <select value={{pool}} class="form-control" onchange={{action "setFilter" value="target.value"}} id="type-select">
              <option value="0">All Pools</option>
              {{#each model.pools as |pool|}}
                <option value="{{pool}}">Pool {{pool}}</option>
              {{/each}}
            </select>
          </div>
        </form>
      </div>
    </div>
  {{/if}}
</div>
{{outlet}}
<div class="container">
    {{#if model.notStarted}}
        <button {{action "unstart" this}} class="btn btn-primary">Change setup</button>
    {{/if}}
    {{#if model.done}}
        <button {{action "finish" this}} class="btn btn-primary">Finish</button>
    {{/if}}
</div>
