<div class="container">
    <h1>Add new player</h1>
    <div class="row">
        <div class="col-md-6">
            <div class="well well-lg">
                <form role="form" class="form">
                    <div class="form-group">
                        {{input value=model.name type="text" class="form-control" placeholder="Enter player name"}}
                    </div>
                <button type="submit" {{action "create" this}} class="btn btn-primary">Add</button>
                </form>
            </div>
        </div>
    </div>
</div>
