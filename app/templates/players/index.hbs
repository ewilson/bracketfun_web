<div class="container">
    <h1>Players</h1>
  {{#link-to 'players.new' type="button" class="btn btn-primary"}}Add a player{{/link-to}}
    <div>&nbsp;</div>
    {{#if notification}}
      <div id="notification">
        <div class="panel panel-danger">
          <div class="panel-heading">
            {{notificationHeading}}
          </div>
          <div class="panel-body">
            <p id="notification">{{notificationBody}}</p>
            <button {{action "closeNotification"}} class="btn">Close</button>
          </div>
        </div>
      </div>
    {{/if}}
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading"></div>
                <div class="panel-body list-group">
                  {{#each model key="@guid" as |player|}}
                    <a href="#" class="list-group-item">
                        <span><strong>{{player.name}}</strong></span>
                        <span {{action 'remove' player}} class="glyphicon glyphicon-trash pull-right"></span>
                    </a>
                  {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
